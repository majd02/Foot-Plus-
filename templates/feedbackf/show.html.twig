{% extends 'baseF.html.twig' %}

{% block title %}Feedback{% endblock %}

{% block body %}
    <h1>Feedback</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ feedback.id }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ feedback.description }}</td>
            </tr>
            <tr>
                <th>Rate</th>
                <td>{{ feedback.rate }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ feedback.date ? feedback.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Idu</th>
                <td>{{ feedback.idu }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('feedbackf_index') }}">back to list</a>

    <a href="{{ path('feedbackf_edit', {'id': feedback.id}) }}">edit</a>

    {{ include('feedbackf/_delete_form.html.twig') }}
{% endblock %}
